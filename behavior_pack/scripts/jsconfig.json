{
    "compilerOptions": {
        "module": "es2022",
        "target": "ESNext",
        "moduleResolution": "node",
        "downlevelIteration": true,
        "allowJs": true,
        "checkJs": false,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "outDir": "./src",
        "resolveJsonModule": true,
        "strict": true,
        "typeRoots": ["../../node_modules/"],
        "types": [
            "@minecraft/server",
            "@minecraft/server-ui"
        ]
    },
    "include": ["./main.js"]
}